--
-- demo/key.exw
--
-- Find out what numeric key code is generated by any key on the keyboard
--
puts(1, "Press any key to display the key code, Escape or q to quit\n")
integer code = -1
while not find(code,"qQ\x1B") do
    code = wait_key()
    printf(1, "The key code is: %d\n", code)
end while
printf(1,"Press any key to exit...")
{} = wait_key()

